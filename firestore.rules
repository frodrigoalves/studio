
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isAdmin() {
      return request.auth != null;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Admin Access
    match /tripRecords/{docId} {
      allow read, write: if isAdmin();
      allow create, get, list: if true;
    }
     match /checklistRecords/{docId} {
      allow read, write: if isAdmin();
      allow create: if true;
    }
     match /fuelingRecords/{docId} {
      allow read, write: if isAdmin();
      allow create: if true;
    }
     match /dieselPrices/{docId} {
      allow read, write: if isAdmin();
    }
    match /vehicleParameters/{docId} {
        allow read, write: if isAdmin();
        allow get: if true;
    }
    match /maintenanceRecords/{docId} {
        allow read, write: if isAdmin();
    }
    match /tireRecords/{docId} {
        allow read, write: if isAdmin();
        allow create: if true;
    }
  }
}
