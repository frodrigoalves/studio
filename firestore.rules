rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false; // Default deny all
    }

    // Rules for Trip Records
    match /tripRecords/{recordId} {
      allow create: if true; // Anyone can create a trip record (e.g., from the driver form)
      allow get, list, update, delete: if request.auth != null && (request.auth.token.role == 'diretor' || request.auth.token.role == 'analyst');
    }

    // Rules for Fueling Records
    match /fuelingRecords/{recordId} {
      allow create: if true; // Anyone can create a fueling record
      allow get, list, write: if request.auth != null && (request.auth.token.role == 'diretor' || request.auth.token.role == 'analyst');
    }
    
    // Rules for Checklist Records
    match /checklistRecords/{recordId} {
        allow create: if true;
        allow get, list, update, delete: if request.auth != null && (request.auth.token.role == 'diretor' || request.auth.token.role == 'analyst');
    }

    // Secure collections for admin panel
    match /dieselPrices/{priceId} {
      allow get, list, write: if request.auth != null && (request.auth.token.role == 'diretor' || request.auth.token.role == 'analyst');
    }

    match /vehicleParameters/{vehicleId} {
      allow get, list, write: if request.auth != null && (request.auth.token.role == 'diretor' || request.auth.token.role == 'analyst');
    }
    
    match /maintenanceRecords/{recordId} {
      allow get, list, write: if request.auth != null && (request.auth.token.role == 'diretor' || request.auth.token.role == 'analyst');
    }
  }
}
