
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra temporária para permitir leitura e escrita em todos os documentos
    // para a fase de desenvolvimento e apresentação.
    // ATENÇÃO: Para produção, estas regras devem ser mais restritivas.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
