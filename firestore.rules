
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isPublicForm() {
      return true; // Any unauthenticated user can create these records
    }

    function isManager() {
      return request.auth != null;
    }

    match /tripRecords/{recordId} {
      allow create: if isPublicForm();
      allow read, update, delete: if isManager();
    }
    
    match /checklistRecords/{recordId} {
      allow create: if isPublicForm();
      allow read, update, delete: if isManager();
    }
    
    match /fuelingRecords/{recordId} {
      allow create: if isPublicForm();
      allow read, update, delete: if isManager();
    }
    
    match /dieselPrices/{priceId} {
        allow read, write: if isManager();
    }
    
    match /vehicleParameters/{carId} {
        allow read, write: if isManager();
    }
    
     match /maintenanceRecords/{recordId} {
        allow read, write: if isManager();
    }
  }
}
