rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default rule for admins: allow full access if authenticated
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Public access for tripRecords
    // Allows creating new records, and allows getting/listing records
    // for the end-of-trip functionality.
    match /tripRecords/{tripId} {
      allow create: if true;
      allow get, list: if true; // Allow public read and query
      allow update, delete: if request.auth != null; // Admins only
    }

    // Public access for checklistRecords
    // Only allows creating new records.
    match /checklistRecords/{checklistId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null; // Admins only
    }

    // Public access for fuelingRecords
    // Only allows creating new records.
    match /fuelingRecords/{fuelingId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null; // Admins only
    }

    // Admins have full access to other collections like dieselPrices, etc.
    // by the default rule above.
  }
}
