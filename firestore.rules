rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regras de desenvolvimento: permite acesso a todas as coleções.
    // ATENÇÃO: Em produção, você deve proteger seus dados com regras mais restritivas.
    // Exemplo: allow read, write: if request.auth != null;

    match /checklistRecords/{docId} {
      allow read, write: if true;
    }

    match /dieselPrices/{docId} {
      allow read, write: if true;
    }

    match /fuelingRecords/{docId} {
      allow read, write: if true;
    }

    match /maintenanceRecords/{docId} {
      allow read, write: if true;
    }

    match /tireRecords/{docId} {
      allow read, write: if true;
    }

    match /tripRecords/{docId} {
      allow read, write: if true;
    }

    match /vehicleParameters/{docId} {
      allow read, write: if true;
    }
  }
}
