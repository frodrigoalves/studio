rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to all collections for the client-side app
    match /{document=**} {
      allow read: if true;
      allow write: if false; // Default deny all writes
    }
    
    // Allow authenticated writes to specific collections
    match /tripRecords/{recordId} {
        allow write: if request.auth != null;
    }
    match /dieselPrices/{priceId} {
        allow write: if request.auth != null;
    }
    match /vehicleParameters/{vehicleId} {
        allow write: if request.auth != null;
    }
    match /fuelingRecords/{fuelingId} {
        allow write: if request.auth != null;
    }
    match /maintenanceRecords/{maintenanceId} {
        allow write: if request.auth != null;
    }
  }
}
