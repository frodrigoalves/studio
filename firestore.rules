rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura e escrita para qualquer usuário (autenticado ou não).
    // Isso é adequado para o MVP, onde os formulários são públicos.
    // Para produção, considere regras mais restritivas.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
