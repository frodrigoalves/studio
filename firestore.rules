
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra geral: por padrão, ninguém pode ler ou escrever, exceto os administradores
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Regras para coleções públicas (formulários dos motoristas)
    // Permite que qualquer pessoa crie registros, mas apenas administradores leiam, atualizem ou apaguem.
    match /tripRecords/{recordId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    match /checklistRecords/{recordId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    match /fuelingRecords/{recordId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Regras para coleções de configuração (apenas administradores)
    match /dieselPrices/{priceId} {
      allow read, write: if request.auth != null;
    }

    match /vehicleParameters/{carId} {
      allow read, write: if request.auth != null;
    }
    
    match /maintenanceRecords/{recordId} {
      allow read, write: if request.auth != null;
    }
  }
}
