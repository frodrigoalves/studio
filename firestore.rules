rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if a user is authenticated (logged in)
    function isAuthenticated() {
      return request.auth != null;
    }

    // By default, require authentication for all read and write operations
    // to all collections. This is a secure default.
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }

    // If you need specific collections to be publicly readable in the future,
    // you can add rules for them here. For example:
    // match /publicContent/{docId} {
    //   allow get: if true; // Allow anyone to get a single document
    //   allow list, write: if isAuthenticated(); // But only logged-in users can list or write
    // }
  }
}
